generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Genre {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String   @default("#3B82F6")
  cards       Card[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("genres")
}

model Card {
  id          String   @id @default(cuid())
  question    String
  description String?
  genreId     String
  genre       Genre    @relation(fields: [genreId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([genreId])
  @@map("cards")
}

model GameSession {
  id             String   @id @default(cuid())
  playerCount    Int      @default(2)
  selectedGenres String[] @default([])
  usedCardIds    String[] @default([])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("game_sessions")
}
