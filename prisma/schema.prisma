generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  color       String    @default("#3B82F6")
  cards       Card[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("genres")
}

model Card {
  id          String   @id @default(cuid())
  question    String
  description String?
  genreId     String
  genre       Genre    @relation(fields: [genreId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([genreId])
  @@map("cards")
}

model CustomDeck {
  id          String       @id @default(cuid())
  name        String       // デッキ名（例：「うちのチーム用」）
  description String?
  userId      String?      // ユーザーID（ログイン機能があれば）
  cards       CustomCard[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@map("custom_decks")
}

model CustomCard {
  id          String      @id @default(cuid())
  question    String
  description String?
  deckId      String
  deck        CustomDeck  @relation(fields: [deckId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([deckId])
  @@map("custom_cards")
}

model GameSession {
  id                String   @id @default(cuid())
  cardCount         Int      @default(10)        // トークデッキ数
  selectedGenres    String[] @default([])
  customDeckIds     String[] @default([])        // 選択したオリジナルデッキ
  usedCardIds       String[] @default([])
  currentCardIndex  Int      @default(0)         // 現在何枚目か
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@map("game_sessions")
}

model Room {
  id            String   @id // uuidやcuid
  players       String[] // 参加者名の配列
  requiredCount Int
  selectedGenres String[] @default([]) // 選択ジャンルID
  cardCount     Int      @default(4)  // 配るカード枚数
  status        String   @default("waiting") // ルーム状態: waiting/playing
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("rooms")
}